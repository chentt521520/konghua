<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".main.per_.setingact.verifyidentity">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/verify_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/biankuangxia1"
        android:gravity="center_vertical"
        android:text="*为了您的账号安全，进行敏感操作前须先验证身份。"
        android:textColor="@color/zhu"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/biankuangxia1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="验 证 方 式: "
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="手机验证"
            android:textColor="@color/danhei"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/biankuangxia1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="绑定手机"
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sfyz_tepho"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="183****4852"
            android:textColor="@color/zhu"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/biankuangxia1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="短信验证码"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sfyz_edcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="center_vertical"
                android:hint="6位验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/danhei"
                android:textSize="12sp" />

            <com.shijiucheng.konghua.main.per.payandget.per.tixian.TimerTextView
                android:id="@+id/sfyz_teget"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/yuanjiaoall"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/bai"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ywpho_teok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_bkpaypwd"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/bai"
        android:textSize="13sp" />
</LinearLayout>