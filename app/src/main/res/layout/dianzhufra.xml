<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biankuangyuanjiaodialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dz_tit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/hei"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <TextView
        android:id="@+id/dz_tets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4dp"
        android:text="提示：店主信息一经认证不可修改"
        android:textColor="@color/hei"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/dz_teok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/biankuangyuanjiaodialogxia"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/bai"
        android:textSize="12dp" />


</LinearLayout>
