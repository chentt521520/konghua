<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/ksps_daoh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ksps_tejqps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/biankuangxiaselector_orderdh"
                    android:gravity="center"
                    android:text=" 近期配送员："
                    android:textColor="@color/select_te"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ksps_recycpsy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="@color/qianhei1" />

            <LinearLayout
                android:id="@+id/ksps_xm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ksps_texm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text=" 配送员姓名："
                    android:textColor="@color/hei"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ksps_edxm"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="选填"
                    android:textColor="@color/hei"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="@color/qianhei1" />

            <LinearLayout
                android:id="@+id/ksps_pho"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ksps_tepho"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text=" 配送员手机："
                    android:textColor="@color/hei"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ksps_edpho"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="选填"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingRight="12dp"
                    android:textColor="@color/hei"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="@color/qianhei1" />

            <TextView
                android:id="@+id/ksps_tebaoza"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:text="鲜花包扎图片："
                android:textColor="@color/hei"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/ksps_tp1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/sctpx" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/ksps_tp2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/sctpx" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/ksps_tp3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/sctpx" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/ksps_tebaozats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:paddingStart="12dp"
                android:paddingRight="12dp"
                android:text="为避免经济纠纷，请上传包扎好的鲜花正面或侧面图片，要求鲜花全貌清楚可见，若有贺卡，要求能看到贺卡，未按照要求上传图片则需要承担相应的处罚。图片需为jpg、jpeg、png、gif格式，且大小不超过5M！"
                android:textColor="@color/zhu"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/ksps_teik"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/yuanjiaoall"
        android:enabled="true"
        android:gravity="center"
        android:text="开始配送"
        android:textColor="@color/bai"
        android:textSize="14sp" />


</LinearLayout>