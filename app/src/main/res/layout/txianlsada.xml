<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/txls_im"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/abc" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txlsit_tekahtype"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="7dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="中国工商银行"
                android:textColor="@color/hei"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txlsit_tezt"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/txlsit_tekahtype"
                android:gravity="center"
                android:text="提现成功"
                android:textColor="@color/bai"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/txlsit_tekah"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="33dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="7dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="中国工商银行 尾号:5545"
                android:textColor="@color/hei"
                android:textSize="12sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/txlsit_tenum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical|end"
            android:lineSpacingExtra="7dp"
            android:paddingRight="12dp"
            android:text="-400"
            android:textColor="@color/zhu"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txlsit_tetime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical|end"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="提现时间：2018-06-28 10:55"
            android:textColor="@color/hei"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txlsit_zt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical|end"
            android:lineSpacingExtra="7dp"
            android:paddingRight="12dp"
            android:text="已提现"
            android:textColor="@color/zhu"
            android:textSize="14sp"
            android:visibility="gone" />


    </LinearLayout>

    <TextView
        android:id="@+id/txlsit_teyuanying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="7dp"
        android:paddingBottom="8dp"
        android:textColor="@color/hon"
        android:textSize="12sp" />

    <View
        android:id="@+id/txls_view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/qianhei1" />

</LinearLayout>
