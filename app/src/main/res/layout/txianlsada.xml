<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txlsit_tekah"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:text="中国工商银行 尾号:5545"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/hei"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txlsit_tenum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical|end"
            android:lineSpacingExtra="7dp"
            android:paddingRight="12dp"
            android:text="-400"
            android:textColor="@color/zhu"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txlsit_tetime"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:text="2018-06-28 10:55"
            android:textColor="@color/hei"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txlsit_zt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical|end"
            android:lineSpacingExtra="7dp"
            android:paddingRight="12dp"
            android:text="已提现"
            android:textColor="@color/zhu"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/txlsit_teyuanying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="7dp"
        android:paddingBottom="8dp"
        android:textColor="@color/hon"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/qianhei1" />

</LinearLayout>
