<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gdlistit_lintop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gdlistit_linddbh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gdlistit_telb"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="操作使用类 > 短信接收"
            android:textColor="@color/hei" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bai" />

        <TextView
            android:id="@+id/gdlistit_tetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="2018-08-23 15:07"
            android:textColor="@color/hei" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gdlistit_tetxt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="操作使用类 > 短信接收"
            android:textColor="@color/hei" />

        <TextView
            android:id="@+id/gdlistit_testatus"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:text="操作使用类 "
            android:textColor="@color/hei" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <LinearLayout
        android:id="@+id/gdlistit_lincz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView

            android:id="@+id/gdlistit_tehuifu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:text="回复工单"
            android:textColor="@color/hei" />

        <TextView
            android:id="@+id/gdlistit_teguanbi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:text="关闭工单"
            android:textColor="@color/hei" />
    </LinearLayout>

    <TextView
        android:id="@+id/gdlistit_tepj"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="评价工单"
        android:textColor="@color/hei"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/danzhu" />
</LinearLayout>
