<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:id="@+id/szmxit_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/szmxbg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="2018-06-28 09:35"
        android:textColor="@color/bai"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/szmxit_imt"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/szszmx" />

        <TextView
            android:id="@+id/szmxit_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="申请提现"
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/szmxit_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="-10000000.00"
            android:textColor="#ec7231"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minHeight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/szmxit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="12dp"
            android:layout_weight="2"
            android:gravity="center_vertical|start"
            android:lineSpacingExtra="5dp"
            android:minHeight="40dp"
            android:text="下单方主动结算订单，订单号：2018032245789"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/szmxit_zt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="处理完成"
            android:textColor="#02b80b"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

</LinearLayout>
