<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jiedan_tit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="申请结算"
        android:textColor="@color/hei"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <TextView
        android:id="@+id/jiedan_tets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4dp"
        android:text="同一个订单一天只能发起一次结算提醒，确认继续？"
        android:textColor="@color/hei"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jiedan_teok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhu"
            android:gravity="center"
            android:text="申请结算"
            android:textColor="@color/bai"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jiedan_tequxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/danhei"
            android:gravity="center"
            android:text="暂时不用"
            android:textColor="@color/bai"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
