                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:paddingLeft="12dp"
                        android:text="0"
                        android:textColor="@color/zhu"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
