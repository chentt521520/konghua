<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/good_pic_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="产品图片："
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spxqit_im"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@mipmap/sctpx" />

            <TextView
                android:id="@+id/spxqit_tefd"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/zhu"
                android:gravity="center"
                android:text="点击放大 "
                android:textColor="@color/bai"
                android:textSize="10sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/spxqit_tenum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/spxqit_tepsfz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/biankuangyuanjiaofz"
            android:layout_marginStart="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="复制"
            android:textColor="@color/hei"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spxqit_tehuacai_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="花材："
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/spxqit_tehuacai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/hei"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/spxqit_tebaozhuang_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包装："
            android:gravity="end"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/spxqit_tebaozhuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/hei"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ffdecb"
        android:visibility="gone" />

</LinearLayout>
