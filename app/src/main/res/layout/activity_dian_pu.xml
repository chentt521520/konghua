<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".renzheng.DianPu">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/dianpu_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dianpu_linqy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/biankuangxia"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dianpu_teqy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="企    业    名   称 :  "
                    android:textColor="@color/hei"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dianpu_edqy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/bai"
                    android:gravity="center_vertical"
                    android:hint="须和营业执照上面的名称保持一致！"
                    android:maxLength="100"
                    android:minWidth="150dp"
                    android:paddingLeft="5sp"
                    android:singleLine="true"
                    android:textColor="@color/hei"
                    android:textCursorDrawable="@drawable/guangbiao"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dianpu_linzch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dianpu_tezch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="营业执照注册号:"
                    android:textColor="@color/hei"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dianpu_edzch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/bai"
                    android:digits="01234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                    android:gravity="center_vertical"
                    android:hint="须和营业执照上面的名称保持一致！"
                    android:maxLength="100"
                    android:minWidth="150dp"
                    android:paddingLeft="5sp"
                    android:singleLine="true"
                    android:textColor="@color/hei"
                    android:textCursorDrawable="@drawable/guangbiao"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/dianpu_tesfzt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="营业执照扫描件:"
                android:textColor="@color/hei"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/dianpu_imzzhao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/yyzz" />

            <TextView
                android:id="@+id/dianzhu_tezzts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4dp"
                android:text="*营业执照需为jpg、png格式，且大小不超过5M，须保证营业执照扫描件完整且信息清晰可见！"
                android:textColor="@color/zhu"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/dianzhu_temmzx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="店铺门面照"
                android:textColor="@color/hei"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/pinjia_lintp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/pinjia_retp1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/pinjia_imtp1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingRight="7dp"
                        android:src="@mipmap/sctpx" />

                    <ImageView
                        android:id="@+id/pinjia_imtp1de"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/detel"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pinjia_retp2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/pinjia_imtp2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingRight="7dp"
                        android:src="@mipmap/sctpx" />

                    <ImageView
                        android:id="@+id/pinjia_imtp2de"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/detel"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pinjia_retp3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/pinjia_imtp3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingRight="7dp"
                        android:src="@mipmap/sctpx" />

                    <ImageView
                        android:id="@+id/pinjia_imtp3de"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/detel"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="能否开具发票："
                    android:textColor="@color/hei"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/bill_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_not_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_btn"
                        android:checked="false"
                        android:padding="5dp"
                        android:text="不能开具发票"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_btn"
                        android:checked="false"
                        android:padding="5dp"
                        android:text="能开具发票"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </RadioGroup>

            </LinearLayout>

            <View
                style="@style/ui_line"
                android:layout_marginStart="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="产品经营范围："
                    android:textColor="@color/hei"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/check_btn"
                    android:padding="5dp"
                    android:text="鲜花"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/check_btn"
                    android:padding="5dp"
                    android:text="蛋糕"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/plant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:button="@drawable/check_btn"
                    android:padding="5dp"
                    android:text="绿植"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/dianpu_teok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/yuanjiaoall"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/bai" />

</LinearLayout>