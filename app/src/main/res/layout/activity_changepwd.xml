<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".main.per_.setingact.changepwd">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/changepwd_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="旧    密    码: "
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/xgmm_edjmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuangxia1"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="密码长度 6-12个字符且必须包含字母、数字"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="新    密    码: "
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/xgmm_edmmre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuangxia1"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="密码长度 6-12个字符"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="确认新密码:"
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/xgmm_edqrmre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuangxia1"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="密码长度 6-12个字符"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/xgmm_teok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_bkpaypwd"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/bai"
        android:textSize="13sp" />


</LinearLayout>