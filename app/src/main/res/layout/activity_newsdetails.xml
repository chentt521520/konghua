<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".main.Newsdetails">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/ndet_tedh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="6dp"
            android:src="@mipmap/newst" />

        <TextView
            android:id="@+id/ndet_tetit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="全部"
            android:textColor="@color/hei00"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="发  件  人：花脉"
        android:textColor="@color/hei"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ndet_tetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="发件时间：鲜花网"
        android:textColor="@color/hei"
        android:textSize="12sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/newbc"
        android:minHeight="140dp"
        android:paddingTop="-12dp">

        <TextView
            android:id="@+id/ndet_tetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:paddingTop="7dp"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ndet_tego"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/ndet_tetxt"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/newsbk"
            android:gravity="center"
            android:singleLine="true"
            android:text="立即点击查看"
            android:textColor="@color/bai"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>