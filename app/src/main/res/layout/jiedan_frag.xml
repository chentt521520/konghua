<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biankuangyuanjiaodialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tetit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="立即接单"
        android:textColor="@color/hei"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/qianhei1" />

    <TextView
        android:id="@+id/tetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:text="您接收该笔订单后不可撤单，确认继续？"
        android:textColor="@color/hei"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jiedan_teok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogzuoxia"
            android:gravity="center"
            android:text="立即接单"
            android:textColor="@color/bai"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jiedan_tequxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogyouxia"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bai"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
