<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biankuangyuanjiaodialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tetit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/hei"
        android:textSize="14sp" />

    <View
        android:id="@+id/title_divider"
        style="@style/ui_line" />

    <TextView
        android:id="@+id/tetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/hei"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jiedan_teok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogzuoxia"
            android:gravity="center"
            android:textColor="@color/bai"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jiedan_tequxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogyouxia"
            android:gravity="center"
            android:textColor="@color/bai"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
