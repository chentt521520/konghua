<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="重置支付密码"
        android:textColor="@color/hei"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="短信验证码"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/paypwd_edyzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuang"
            android:digits="0123456789"
            android:hint="6位数字验证码"
            android:inputType="number"
            android:maxLength="6"
            android:minWidth="140dp"
            android:paddingLeft="12dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

        <com.shijiucheng.konghua.main.per.payandget.per.tixian.TimerTextView
            android:id="@+id/paypwd_timerte"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/round_bkpaypwd"
            android:text="获取验证码"
            android:textColor="@color/bai"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="新的支付密码"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/paypwd_edmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuang"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="密码长度 6-12个字符"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:paddingLeft="12dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="确认支付密码"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/paypwd_edmmre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuang"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="密码长度 6-12个字符"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:paddingLeft="12dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/paypwd_teok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_bkpaypwd"
        android:gravity="center"
        android:text="确定"
        android:layout_marginBottom="5dp"
        android:textColor="@color/bai"
        android:textSize="13sp" />

</LinearLayout>
