<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">


        <TextView
            android:id="@+id/jujue_teqb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/biankuangxiaselector_orderdh"
            android:gravity="center"
            android:paddingStart="12dp"
            android:text="系统提示"
            android:textColor="@color/hei"
            android:textSize="14sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <TextView
        android:visibility="gone"
        android:id="@+id/jujue_tebc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:text="申请退单可能会影响您的店铺接单信誉，请慎重操作！"
        android:textColor="@color/zhu"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jujue_yuany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="拒绝原因："
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/jujue_yuany1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:divider="@null" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:id="@+id/jujue_linms"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/jujue_miaos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="top"
            android:text="具体描述："
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jujue_miaos1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/biankuang_qb2"
            android:gravity="start"
            android:hint="请填写具体描述"
            android:lineSpacingExtra="5dp"
            android:maxLength="200"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/danhei"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jujue_jdteok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/zhu"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/bai"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/jujue_jdtequxiao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/biankuang_qb1"
            android:gravity="center"
            android:paddingStart="12dp"
            android:text="取消"
            android:textColor="@color/hei"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
