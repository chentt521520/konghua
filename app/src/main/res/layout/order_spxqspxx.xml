<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ddxq_tespxx1x"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/qianhei1"
        android:gravity="center|start"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="12dp"
        android:text="商品信息1"
        android:textColor="@color/hei"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ddxq_linhcx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ddxq_tehcx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="花材："
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ddxq_tehc1x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center|start"
            android:lineSpacingExtra="5dp"
            android:text="11支精品红玫瑰+2支多头白百合，搭配适量紫色勿忘我、白色满天星、黄莺草、栀子叶11支精品红天星、黄莺草、栀子叶"
            android:textColor="@color/hei"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei" />

    <LinearLayout
        android:id="@+id/ddxq_linbzhx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ddxq_tebzhx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="包装："
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ddxq_tebzh1x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center|start"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="11支精品红玫瑰+2支多头白百合，搭配适量紫色勿忘我、白色满天星、黄莺草、栀子叶11支精品红玫瑰+2支多头白百合，搭配适量紫色勿忘我、白色满天星、黄莺草、栀子叶"
            android:textColor="@color/hei"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei" />


    <TextView
        android:id="@+id/ddxq_tenumx"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center|start"
        android:lineSpacingExtra="5dp"
        android:text="数量： X1件"
        android:textColor="@color/hei"
        android:textSize="12sp" />
</LinearLayout>
