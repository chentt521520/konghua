<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:gravity="center"
        android:text="回复工单"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="回复内容:"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:background="@drawable/biankuang_hfgd"
        android:minHeight="200dp">

        <EditText
            android:id="@+id/hfgd_edtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@color/bai"
            android:hint="请输入内容"
            android:lineSpacingExtra="6dp"
            android:gravity="start"
            android:maxLength="200"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/hei"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/hfgd_tenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dp"
            android:paddingRight="6dp"
            android:text="0/200" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="回复图片:"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/fhgd_lintp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/biankuang_hfgd"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fhgd_imtp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="7dp"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:src="@mipmap/sctpx" />


        <ImageView
            android:id="@+id/fhgd_imtp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:src="@mipmap/sctpx" />


        <ImageView
            android:id="@+id/fhgd_imtp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            android:src="@mipmap/sctpx" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:text=" 选择文件图片需为jpg、png、gif格式，且大小不超过5M，最多可上传三张！"
        android:textColor="@color/hei"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/fhgd_teok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/zhu"
        android:ems="10"
        android:gravity="center"
        android:text="回复工单"
        android:textColor="@color/bai"
        android:textSize="14sp" />

</LinearLayout>
