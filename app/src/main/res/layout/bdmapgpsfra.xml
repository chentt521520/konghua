<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biankuangyuanjiaodialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/gps_tit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/hei"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <TextView
        android:id="@+id/gps_tets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4dp"
        android:text="为了获取准确的位置信息，需要你打开位置信息（GPS）定位功能"
        android:textColor="@color/hei"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gps_teok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogzuoxia"
            android:gravity="center"
            android:text="去开启"
            android:textColor="@color/bai"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/gps_tequxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuangyuanjiaodialogyouxia"
            android:gravity="center"
            android:text="暂时不用"
            android:textColor="@color/bai"
            android:textSize="12dp" />
    </LinearLayout>


</LinearLayout>
