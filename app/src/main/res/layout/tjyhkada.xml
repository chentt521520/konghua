<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tjyhkitlin"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/tjyhkit_imtj"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tjyhkit_teyh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/tjyhkit_imtj"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:text="添加银行卡"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tjyhkit_teyhk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tjyhkit_teyh"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:text="(添加银行卡)"
            android:textColor="@color/hei"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/qianhei1" />


</LinearLayout>
