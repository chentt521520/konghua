                    android:layout_marginTop="13dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="立即设置"
                    android:textColor="@color/hei"
                    android:textSize="13sp" />

            </LinearLayout>

            <RelativeLayout
