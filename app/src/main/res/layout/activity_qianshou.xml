<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".main.HomePage.qianshou">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/qs_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/qs_teqsts"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:lineSpacingExtra="4dp"
        android:text="请勿在没有送达的情况下点击签收，送达前确认签收产生的交易纠纷由接单方承担。"
        android:textColor="@color/zhu"
        android:textSize="11sp"
        android:visibility="visible" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/qs_teqianshousj"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12sp"
        android:text="签收时间：  请选择签收时间"
        android:textColor="@color/hei"
        android:textSize="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qs_teqsr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="    签收人：  "
            android:textColor="@color/hei"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/qs_tebrqs"
            android:layout_width="26dp"
            android:layout_height="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/xzhong"
            android:visibility="visible" />

        <TextView
            android:id="@+id/qs_tebrqs1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="本人签收"
            android:textColor="@color/hei"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/qs_tetrqs"
            android:layout_width="26dp"
            android:layout_height="15dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/xzhong1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/qs_tetrqs1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="他人签收"
            android:textColor="@color/hei"
            android:textSize="13dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="#f4f4f4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center_vertical"
            android:text="签收凭证：   "
            android:textColor="@color/hei"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/qs_tp1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/sctpx" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/qs_teqsts1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:lineSpacingExtra="4dp"
        android:text="请上传签收单拍照或实物照，勿上传非相关图片。图片需为jpg、jpeg、png、gif格式，且大小不超过5M！"
        android:textColor="@color/zhu"
        android:textSize="11sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/qs_teok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/yuanjiaoall"
        android:enabled="true"
        android:gravity="center"
        android:text="确认签收"
        android:textColor="@color/bai"
        android:textSize="14sp" />
</LinearLayout>