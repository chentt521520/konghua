<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".main.per.payandget.payAndGet">

    <com.shijiucheng.konghua.com.shijiucheng.konghua.app.DaoHang_top
        android:id="@+id/szmx_dh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/qianhei1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/szmx_qb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/select_te"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/danhei" />

        <TextView
            android:id="@+id/szmx_sr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收入"
            android:textColor="@color/select_te"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/danhei" />

        <TextView
            android:id="@+id/szmx_zc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支出"
            android:textColor="@color/select_te"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/danhei" />

        <TextView
            android:id="@+id/szmx_clz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="冻结中"
            android:textColor="@color/select_te"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhu" />

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/danhei" />

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/danhei" />

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/danhei" />
    </LinearLayout>

    <TextView
        android:id="@+id/szmx_tenum"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:text="账户余额：46.00  =   账户总入账：100.00  -   账户总支出：54.00"
        android:textColor="@color/zhu"
        android:textSize="11sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhei1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/szmx_smtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlAccentColor="@android:color/black"
                app:srlEnablePreviewInEditMode="true"
                app:srlPrimaryColor="#00000000">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="205dp"
                        android:layout_marginTop="30dp">

                        <com.shijiucheng.konghua.main.Utils.DiscView
                            android:id="@+id/txls_disc"
                            android:layout_width="match_parent"
                            android:layout_height="205dp" />

                        <TextView
                            android:id="@+id/szmx_zsr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="账户总入账\n200（元）"
                            android:textColor="@color/select_te"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="120dp"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/zsrd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="账户余额  "
                            android:textColor="@color/hei777"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/szmx_teye"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="22"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="120dp"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/zzcd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="账户总支出  "
                            android:textColor="@color/hei777"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/szmx_tezc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="22"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="35dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="120dp"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/zdjd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="账户总冻结  "
                            android:textColor="@color/hei777"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/szmx_tedj"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="22"
                            android:textColor="@color/hei"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/v_5"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="#f4f4f4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/szmx_recyc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srlAccentColor="@color/hei"
                    app:srlPrimaryColor="#00000000" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>