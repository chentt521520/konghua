<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="验证支付密码"
        android:textColor="@color/hei"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/yz_edmm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/biankuangxia"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="支付密码长度 6-12个字符"
            android:inputType="textPassword"
            android:maxLength="12"
            android:minWidth="170dp"
            android:paddingLeft="12dp"
            android:textColor="@color/hei"
            android:textColorHint="@color/qianhei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/yz_yz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/biankuang"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="确定"
            android:textColor="@color/hei"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/yz_teforget"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="忘记支付密码?"
        android:textColor="@color/hon"
        android:textSize="12sp" />

</LinearLayout>
